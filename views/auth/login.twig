{% extends 'headerLayout.twig' %}
{% block content %}
    <div class="container">
        <form class="form-sigin" method="post" action="{{ 'login'|url }}">
            <h2 class="form-signin-heading">{{ webInfo.title }}</h2>
            <div class="form-group {% if errors['inputEmail'] %}has-error{% endif %}">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="text" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors,'inputEmail') }}

            <div class="form-group {% if errors['inputPassword'] %}has-error{% endif %}">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password">
            </div>
            {{ generateAlert(errors,'inputPassword') }}
            {{ generateAlert(errors,'authError') }}

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me">Remember
                </label>
            </div>
            <button class="btn btn-primary ">Login</button>

        </form>
    </div>
{% endblock %}