{% extends 'headerLayout.twig' %}
{% block content %}
    <div class="container">
        <form  method="{{ webInfo.method }}" action="{{ webInfo.url |url }}">
            <h2 class="form-signin-heading">{{ webInfo.title }}</h2>
            <div class="form-group {% if errors['inputName'] %}has-error{% endif %}">
                <label for="inputName" class="sr-only">Email</label>
                <input type="text" id="inputName" name="inputName" class="form-control" placeholder="Nombre" autofocus
                       value="{{ user.userName }}">
            </div>
            {{ generateAlert(errors, 'inputName') }}
            <div class=" form-group {% if errors['inputEmail'] %}has-error{% endif %}">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="text" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email"
                       value="{{ user.userEmail }}">
            </div>
            {{ generateAlert(errors, 'inputEmail') }}

            <div class=" form-group {% if errors['inputPassword1'] %}has-error{% endif %}">
                <label for="inputPassword1" class="sr-only">Password</label>
                <input type="password" id="inputPassword1" class="form-control" name="inputPassword1"
                       placeholder="New password">
            </div>
            {{ generateAlert(errors, 'inputPassword1') }}

            <div class=" form-group {% if errors['inputPassword2'] %}has-error{% endif %}">
                <label for="inputPassword2" class="sr-only">Password </label>
                <input type="password" id="newPassword2" class="form-control" name="inputPassword2"
                       placeholder="Retype the new password">
            </div>
            {{ generateAlert(errors, 'inputPassword2') }}

            <div class="buttonIndex">
            <button class="btn btn-lg btn-success" type="submit">{{ webInfo.button }}</button>
            </div>
        </form>
    </div> <!-- /container -->
{% endblock %}