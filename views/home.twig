{% extends 'headerLayout.twig' %}
{% block content %}
    <div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Artist</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
       {% for album in albums %}
            <tr>
                <td><img src="{{ album.image }}" alt="Logo de {{ album.image }}"></td>
                <td class="row"><a href="album/{{ album.name }}">{{ album.name }}</a></td>
                <td class="row">{{ album.artist }}</td>
                <td class="row">{{ album.album_type }}</td>

                <td>
                    <a href="/album/edit/{{ album.id }}" class="editar btn btn-link">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <div class="buttonIndex">
        <a type="submit" class="btn btn-success " href="{{ 'album/add' | url }}">Add</a>
    </div>
</div><!-- /.container -->
{% endblock %}