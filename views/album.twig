{% extends 'headerLayout.twig' %}
{% block content %}
<div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Rating</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td class="row">{{ track.name   }}</td>
                <td class="row">{{ track.artist }}</td>
                <td class="row">{{ track.album  }}</td>
                <td class="row">{{ track.rating }}</td>
                <td class="row">{{ track.genre  }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="buttonIndex">
        <form action="/album/add " method="POST">
            <input type="hidden" name ="album" value="{{ tracks[0].album }}">
            <input type="hidden" name="_method" value="album">
            <button type="submit" class="btn btn-success "> Add </button>
        </form>
    </div>
</div><!-- /.container -->
{% endblock %}